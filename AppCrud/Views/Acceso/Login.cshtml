@{
    ViewData["Title"] = "Login";
    Layout = null; // No utilizar el layout principal
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor de Empleados</title>

    <!-- Referencia al archivo CSS de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Estilos personalizados -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-primary d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 8px;">
        <h2 class="text-center mb-4">Bienvenido</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <input type="text" id="nombreUsuario" name="nombreUsuario" class="form-control" placeholder="Usuario" />
            </div>
            <div class="mb-3">
                <input type="password" id="password" name="password" class="form-control" placeholder="Contraseña" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
       

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">
                @ViewBag.Error
            </div>
        }
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

