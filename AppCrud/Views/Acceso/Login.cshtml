@{
    ViewData["Title"] = "Login";
    Layout = null; // No utilizar el layout principal
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <!-- Referencia al archivo CSS de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Estilos personalizados -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="nombreUsuario" class="control-label">Nombre de Usuario</label>
                <input type="text" id="nombreUsuario" name="nombreUsuario" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Contraseña</label>
                <input type="password" id="password" name="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
