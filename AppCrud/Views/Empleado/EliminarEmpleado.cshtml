@{
}
@model AppCrud.Models.Empleado

<!DOCTYPE html>
<html>
<head>
    <title>Eliminar Empleado</title>
</head>
<body>
    <h1>Eliminar Empleado</h1>
    <p>¿Está seguro de que desea eliminar este empleado?</p>
    <dl>
        <dt>Nombre</dt>
        <dd>@Model.Nombre</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Fecha de Contrato</dt>
        <dd>@Model.FechaContrato</dd>
        <dt>Activo</dt>
        <dd>@Model.Activo</dd>
    </dl>
    <form asp-action="EliminarEmpleado">
        <input type="hidden" asp-for="IdEmpleado" />
        <button type="submit">Eliminar</button> |
        <a href="@Url.Action("ObtenerEmpleados")">Cancelar</a>
    </form>
</body>
</html>
